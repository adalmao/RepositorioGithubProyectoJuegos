<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alvaro.aplicationgames"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.alvaro.aplicationgames.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.alvaro.aplicationgames.menuClass"
            android:label="Menu Class" >
            <intent-filter>
                <action android:name="com.example.alvaro.aplicationgames.menuClass" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.alvaro.aplicationgames.workingOnGames"
            android:label="Working on Games" >
            <intent-filter>
                <action android:name="com.example.alvaro.aplicationgames.workingOnGames" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.alvaro.aplicationgames.interviewClass"
            android:label="Interviews" >
            <intent-filter>
                <action android:name="com.example.alvaro.aplicationgames.interviewClass" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>