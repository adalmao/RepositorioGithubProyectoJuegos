<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alvaro.aplicationgames" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:label="Menu Class"
            android:name=".menuClass">
            <intent-filter>
                <action android:name="com.example.alvaro.aplicationgames.menuClass" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:label="Working on Games"
            android:name=".workingOnGames">
            <intent-filter>
                <action android:name="com.example.alvaro.aplicationgames.workingOnGames" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:label="Interviews"
            android:name=".interviewClass">
            <intent-filter>
                <action android:name="com.example.alvaro.aplicationgames.interviewClass" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
